{
  "name": "samsungtv-media-helper",
  "version": "1.0.0",
  "description": " Node App that prepares a video or a series of videos to be viewable (and subtitled) in a Samsung TV through DLNA",
  "main": "./src/index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts",
    "build": "rimraf ./build && tsc --build && pkg .",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "bin": "./build/index.js",
  "pkg": {
    "assets": [
      "/node_modules/subtitler/lib/**/*.*",
      "/node_modules/subtitler/lib"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/LuisMayo/samsungtv-media-helper.git"
  },
  "author": "Luis Mayo",
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/LuisMayo/samsungtv-media-helper/issues"
  },
  "homepage": "https://github.com/LuisMayo/samsungtv-media-helper#readme",
  "dependencies": {
    "@types/fluent-ffmpeg": "^2.1.21",
    "fluent-ffmpeg": "^2.1.2",
    "popups-file-dialog": "^1.6.1",
    "subtitler": "^2.7.0",
    "systeminformation": "^5.17.17",
    "typescript": "^5.1.3"
  },
  "devDependencies": {
    "pkg": "^5.8.1",
    "rimraf": "^5.0.1",
    "ts-node": "^10.9.1"
  }
}
